<% if @current_user.role == "User" %>
  <h1 class="Cart-title">My Cart</h1>
<% else %>
  <h1 class="Cart-title">Offline Cart</h1>
<% end %>


<% order = @current_user.orders.being_created %>
<% if order == nil || order.totalprice == 0%>
  <h6 class="Emptycart-text">Cart is empty!</h6>
<% else %>
  <section class="Cart-section">
    <p class="Cart-heading">
      <span>Item Name</span>
      <span class="Cart-price">Price</span>
    </p>
    <ul>
      <% Orderitem.all.each do |orderitem| %>
        <li class="Cart-content">
          <% if orderitem.order_id == order.id && orderitem.qty > 0 %>
            <span> <%= orderitem.menu_item_name %> </span>
            <span class="Cart-price">
              <p class="Cart-update">
                <%= link_to "-  ", "/order_items/#{orderitem.id}?symbol=0", method: "PATCH", class: "CartUpdate-link"  %>
                <%= orderitem.qty %>
                <%= link_to  "  +", "/order_items/#{orderitem.id}?symbol=1", method: "PATCH", class: "CartUpdate-link" %>
              </p>
              <p class="qty-price">
                <%= orderitem.menu_item_price*orderitem.qty %> Rs.
              </p>
            </span>
            <span>
              <%= link_to "Remove",
                "/order_items/#{orderitem.id}",
                method: "DELETE",
                class: "CartRemove-link"
              %>
            </span>
          <% end %>
        </li>
      <% end %>
      </li>
    </ul>

    <p class="Total-price">Total: <%= order.totalprice %> Rs. </p>

    <section class="Place-order">
      <%= form_with url: "/orders/#{order.id}", method: "PATCH" do |form| %>
        <%= form.submit "Place Order", class: "PlaceOrder-button" %>
      <% end %>
    </section>
  </section>
<% end %>
