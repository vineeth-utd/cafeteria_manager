<% if @current_user.role == "Manager" %>
  <h1>Orders</h1>

<% elsif @current_user.role == "Billing-Clerk" %>
  <h1>Orders</h1>

<% else %>
  <h1>My orders</h1>
  <% Order.all.each do |order| %>
    <% if order.status == "order_confirmed" || order.status == "delivered"%>
      <h6> Order Id: <%= order.id %> </h6>
      <% order.orderitems.each do |orderitem| %>
        <p> <%= orderitem.menu_item_name %> - <%= orderitem.menu_item_price %> </p>
      <% end %>
    <% end %>
  <% end %>
<% end %>
