<!DOCTYPE html>
<html>
  <head>
    <title>CafeteriaManager</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if @current_user %>
      <nav class="UserHeader">
        <h2 class="Welcome-text">Welcome <%= @current_user.first_name %>!</h2>
        <ul class="nav-links">
          <li>
            <% if @current_user.role == "User" %>
              <%= link_to "My Cart", new_order_path, class: "nav-link" %>
            <% end %>
          </li>
          <li>
            <%= link_to "Sign-Out", destroy_session_path, method: "delete", class: "nav-link" %>
          </li>
        </ul>
      </nav>


      <section class="Dashboard-section">
        <p class="Dashboard-title">Dashboard</p>
        <% if @current_user.role == "Manager" %>
          <ul>
            <h3 class="Dashboard-list">
              <%= link_to "About Us", about_index_path %>
            </h3>
            <h3 class="Dashboard-list">
              <%= link_to "Menus", menus_path %>
            </h3>
            <h3 class="Dashboard-list">
              <%= link_to "Orders", orders_path %>
            </h3>
            <h3 class="Dashboard-list">
              <%= link_to "Users", users_path %>
            </h3>
          </ul>



        <% elsif @current_user.role == "Billing-Clerk" %>
          <ul>
            <h3 class="Dashboard-list">
              <%= link_to "About Us", about_index_path %>
            </h3>
            <h3 class="Dashboard-list">
              <%= link_to "Menus", menu_items_path %>
            </h3>
            <h3 class="Dashboard-list">
              <%= link_to "Orders", orders_path %>
            </h3>
          </ul>

        <% else %>
          <ul>
            <h3 class="Dashboard-list">
              <%= link_to "About Us", about_index_path %>
            </h3>
            <h3 class="Dashboard-list">
              <%= link_to "Menus", menu_items_path %>
            </h3>
            <h3 class="Dashboard-list">
              <%= link_to "My Orders", orders_path %>
            </h3>
          </ul>
        <% end %>
      </section>

    <% end %>

    <% if flash[:error] %>
      <p class="Flash-error">
        <%= flash[:error] %>
      </p>
    <% end %>

    <%= yield %>
  </body>
</html>
