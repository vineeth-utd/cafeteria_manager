<!DOCTYPE html>
<html>
  <head>
    <title>Cafeteria Manager</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

    <meta name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1, maximum-scale=1" />
  </head>

  <body>
    <% if @current_user %>
      <nav class="navbar navbar-expand-md bg-dark navbar-dark">
        <a href="#" class="pull-left">
          <%= image_tag "icons8-school-cafeteria-50-2.png", class: "nav-icon" %>
        </a>
        <a class="navbar-brand" href="#" style="margin-right: 50px">Cafeteria Management</a>
        <h2 class="Welcome-text">Welcome <%= @current_user.first_name %>!</h2>
        <section class="nav-links">
          <button
            class="navbar-toggler"
            type="button"
            data-toggle="collapse"
            data-target="#collapsibleNavbar"
          >
            <span class="navbar-toggler-icon"></span>
          </button>

        <div class="collapse navbar-collapse" id="collapsibleNavbar">
          <ul class="navbar-nav">
            <li class="nav-item">
              <%= link_to "About Us", about_index_path, class: "nav-link" %>
            </li>

            <li class="nav-item">
              <% if @current_user.role == "Manager" %>
                <%= link_to "ActiveMenu", menus_path, class: "nav-link" %>
              <% end %>
            </li>

            <li class="nav-item">
              <%= link_to "Menus", menu_items_path, class: "nav-link" %>
            </li>

            <li class="nav-item">
              <% unless @current_user.role == "User"  %>
                <%= link_to "Pending", pending_orders_path, class: "nav-link" %>
              <% end %>
            </li>

            <li class="nav-item">
              <%= link_to "Orders", orders_path, class: "nav-link" %>
            </li>

            <li class="nav-item">
              <% if @current_user.role == "User" %>
                <%= link_to "My Cart", new_order_path, class: "nav-link" %>
              <% else %>
                <%= link_to "Offline Cart", new_order_path, class: "nav-link" %>
              <% end %>
            </li>

            <li class="nav-item">
              <% if @current_user.role == "Manager" %>
                <%= link_to "Users", users_path, class: "nav-link" %>
              <% end %>
            </li>

            <li class="nav-item">
              <%= link_to "Sign-Out", destroy_session_path, method: "delete", class: "nav-link" %>
            </li>
          </ul>
        </div>
        </section>
      </nav>
    <% end %>

    <% if flash[:error] %>
      <p class="Flash-error">
        <%= flash[:error] %>
      </p>
    <% end %>

    <% if flash[:notice] %>
      <p class="Flash-notice">
        <%= flash[:notice] %>
      </p>
    <% end %>

    <%= yield %>
  </body>
</html>
