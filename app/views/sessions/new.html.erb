<main class="Usersnew">
  <p class="NewUsers-title">Sign-In!</p>
  <section class="SignUp-box">
    <div class="Signin-link">
      New to Cafeteria?
      <%= link_to "Register here", new_user_path %>
    </div>
    <%= form_with url: sessions_path do |form| %>
      <div class="Form-section">
        <%= form.email_field :email,
          class: "Form-input",
          placeholder: "Email",
          autofocus: "autofocus"
        %>
      </div>
      <div class="Form-section">
        <%= form.password_field :password, class: "Form-input", placeholder: "Password"  %>
      </div>
      <div class="Form-section">
        <%= form.submit "Sign-In!", class: "Form-submit" %>
      </div>
    <% end %>
  </section>
</main>
